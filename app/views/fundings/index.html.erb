<p id="notice"><%= notice %></p>

<h1>Cate's Funding Requests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Photo</th>
      <th>Target Amount</th>
      <th>Current Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fundings.each do |funding| %>
      <tr>
        <td><%= funding.title %></td>
        <td><%= funding.content %></td>
        <td><%= funding.photo %></td>
        <td><%= funding.amtTarget %></td>
        <td><%= funding.amtCurrent %></td>
        <td><%= link_to 'Show', funding %></td>
        <td><%= link_to 'Edit', edit_funding_path(funding) %></td>
        <td><%= link_to 'Destroy', funding, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Funding Request', new_funding_path %>
